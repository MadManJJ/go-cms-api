# Server configuration
PORT=8080
APP_NAME=CMS API

# Application environment
ENVIRONMENT=development

# Frontend URL
FRONTEND_URLS=https://app.example.com,https://admin.example.com

# Base URL for the API
API_BASE_URL=http://localhost:8080

# CMS base URL
CMS_BASE_URL=http://localhost:3001

# Web base URL  
WEB_BASE_URL=http://localhost:3000

# File upload path
UPLOAD_FILE_PATH=./public_uploads

# Static file prefix for serving files
STATIC_FILE_PREFIX=/files

# Database configuration
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=postgres
DB_PASSWORD=password
DB_NAME=cms-api

# SendGrid API key for email services
SENDGRID_API_KEY=your_sendgrid_api_key

# pgAdmin configuration (required by docker-compose.yml)
PGADMIN_DEFAULT_EMAIL=admin@example.com
PGADMIN_DEFAULT_PASSWORD=your_pgadmin_password

# JWT and LIFF secrets
JWT_SECRET_KEY=your_jwt_secret_key

# Line Login
OAUTH_CLIENT_ID=your_client_id
OAUTH_REDIRECT_URI=http://localhost:8080/auth/callback 
OAUTH_CLIENT_SECRET=your_client_secret
TOKEN_URL=https://api.line.me/oauth2/v2.1/token
AUTHORIZE_URL=https://access.line.me/oauth2/v2.1/authorize


